<h1><%= @cocktail.name %></h1>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

<h3>Ingredients:</h3>
<p><%= link_to 'Add an Ingredient', new_cocktail_dose_path(@cocktail.id) %></p>

<% @cocktail.doses.each do |dose|%>
<ul>
  <li>
    <%= dose.ingredient.name %> |
    <%= dose.description %> |
    <%= link_to 'Destroy', dose, method: :delete, data: { confirm: 'Are you sure?' } %>
  </li>
</ul>
<% end %>

<p>
  <%= link_to 'Edit this Cocktail', edit_cocktail_path(@cocktail.id) %> |
  <%= link_to 'Delete this Cocktail', cocktail_path(@cocktail), method: :delete, data: { confirm: 'Are you sure?' }  %>
</p>

<%= link_to 'Back to Cocktails', cocktails_path %>
